Procedure GaugeRadioButtons(G12, G14, G16, G18: Boolean);Begin	SetItem(4, G12);	SetItem(5, G14);	SetItem(6, G16);	SetItem(7, G18)End;Procedure TemperatureRadioButtons(T21, T75: Boolean);Begin	SetItem(9, T21);	SetItem(10, T75)End;Function GetTemperature(T21, T75: Integer): Integer;Begin	If ItemSel(T21) Then		GetTemperature := 70	Else 		GetTemperature := 167End;Function GetGauge(G12, G14, G16, G18: Integer): Integer;Begin	If ItemSel(G12) Then		GetGauge := 12	Else If ItemSel(G14) Then		GetGauge := 14	Else If ItemSel(G16) Then		GetGauge := 16	Else		GetGauge := 18End;Procedure SignalDialogueBox(Prefix, Zone, WireID: String);Var	Left, Top, Right, Bottom: Integer;Begin	Message('Begin SignalDialogueBox');	GetScreen(Left, Top, Right, Bottom);	Left:= (Right Div 2) - 200;	Top := (Bottom Div 2) - 90;	Right:= (Right Div 2) + 200;	Bottom := (Bottom Div 2) + 90;	BeginDialog(1, 1, Left, Top, Right, Bottom);		SetTitle('Signal Circuit Information');		AddButton('OK', 1, 1, 340, 150, 390, 170);		AddButton('Cancel', 2, 1, 280, 150, 330, 170);		AddGroupBox('Wire Gauge', 3, 10, 10, 210, 80);		AddButton('12', 4, 3, 20, 30, 100, 50);		AddButton('14', 5, 3, 20, 50, 100, 70);		AddButton('16', 6, 3, 110, 30, 200, 50);		AddButton('18', 7, 3, 110, 50, 200, 70);		AddGroupBox('Operating Temperature', 8, 10, 100, 210, 150);		AddButton('70¡F (21¡C)', 9, 3, 20, 120, 110, 140);		AddButton('167¡F (75¡C)', 10, 3, 110, 120, 200, 140);		AddField('Prefix:', 11, 1, 250, 40, 300, 60);		AddField(Prefix, 12, 2, 310, 40, 390, 60);		AddField('Circuit:', 13, 1, 250, 80, 300, 100);		AddField(Zone, 14, 2, 310, 80, 390, 100);		AddField('Wire ID:', 15, 1, 250, 120, 300, 140);		AddField(WireID, 16, 2, 310, 120, 390, 140);	EndDialog;	Message('End SignalDialogueBox')End;Procedure DoSignalDialogue(Var WireGauge, Temperature, Zone: Integer; Var Prefix, WireID: String);Var	DialogueDone, Cancel: Boolean;	ItemID: Integer;Begin	SignalDialogueBox(Prefix, Num2Str(0, Zone), WireID);	DialogueDone := False;	Cancel := False;	GetDialog(1);	SetItem(5, True);	SetItem(9, True);	Repeat		DialogEvent(ItemID);		Case (ItemID) Of			1: OKCancelProcess(DialogueDone, Cancel, ItemID);			2: OKCancelProcess(DialogueDone, Cancel, ItemID);			4: GaugeRadioButtons(True, False, False, False);			5: GaugeRadioButtons(False, True, False, False);			6: GaugeRadioButtons(False, False, True, False);			7: GaugeRadioButtons(False, False, False, True);			9: TemperatureRadioButtons(True, False);			10: TemperatureRadioButtons(False, True);			Otherwise				Message('');		End;	Until(DialogueDone);	If Not(Cancel) Then	Begin		WireGauge := GetGauge(4, 5, 6, 7);		Temperature := GetTemperature(9, 10);		Prefix := GetField(12);		Zone := Round(Str2Num(GetField(14)));		WireID := GetField(16);	End;	ClrDialogEnd;