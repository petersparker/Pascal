Procedure ClassRadioButtons(CA, CB: Boolean);Begin	SetItem(4, CA);	SetItem(5, CB)End;Procedure StyleRadioButtons(SY, SZ: Boolean);Begin	SetItem(7, SY);	SetItem(8, SZ)End;Function GetClass(CA, CB: Integer): String;Begin	If ItemSel(CA) Then		GetClass := 'A'	Else 		GetClass := 'B'End;Function GetStyle(SY, SZ: Integer): String;Begin	If ItemSel(SY) Then		GetStyle := 'Y'	Else 		GetStyle := 'Z'End;Procedure DetectionDialogueBox(Prefix, Zone, WireID: String);Var	Left, Top, Right, Bottom: Integer;Begin	Message('Begin DetectionDialogueBox');	GetScreen(Left, Top, Right, Bottom);	Left:= (Right Div 2) - 200;	Top := (Bottom Div 2) - 90;	Right:= (Right Div 2) + 200;	Bottom := (Bottom Div 2) + 90;	BeginDialog(1, 1, Left, Top, Right, Bottom);		SetTitle('Detection Circuit Information');		AddButton('OK', 1, 1, 340, 130, 390, 150);		AddButton('Cancel', 2, 1, 280, 130, 330, 150);		AddGroupBox('Wire Class', 3, 10, 10, 210, 60);		AddButton('A', 4, 3, 20, 30, 100, 50);		AddButton('B', 5, 3, 110, 30, 200, 50);		AddGroupBox('Wire Style', 6, 10, 70, 210, 120);		AddButton('Y', 7, 3, 20, 90, 100, 110);		AddButton('Z', 8, 3, 110, 90, 200, 110);		AddField('Prefix:', 9, 1, 250, 20, 300, 40);		AddField(Prefix, 10, 2, 310, 20, 390, 40);		AddField('Circuit:', 11, 1, 250, 60, 300, 80);		AddField(Zone, 12, 2, 310, 60, 390, 80);		AddField('Wire ID:', 13, 1, 250, 100, 300, 120);		AddField(WireID, 14, 2, 310, 100, 390, 120);	EndDialog;	Message('End DetectionDialogueBox')End;Procedure DoDetectionDialogue(Var Zone: Integer; Var WireClass, WireStyle, Prefix, WireID: String);Var	DialogueDone, Cancel: Boolean;	ItemID: Integer;Begin	DetectionDialogueBox(Prefix, Num2Str(0, Zone), WireID);	DialogueDone := False;	Cancel := False;	GetDialog(1);	SetItem(5, True);	SetItem(7, True);	Repeat		DialogEvent(ItemID);		Case (ItemID) Of			1: OKCancelProcess(DialogueDone, Cancel, ItemID);			2: OKCancelProcess(DialogueDone, Cancel, ItemID);			4: ClassRadioButtons(True, False);			5: ClassRadioButtons(False, True);			7: StyleRadioButtons(True, False);			8: StyleRadioButtons(False, True);			Otherwise				Message('');		End;	Until(DialogueDone);	If Not(Cancel) Then	Begin		WireClass := GetClass(4, 5);		WireStyle := GetStyle(8, 7);		Prefix := GetField(10);		Zone := Round(Str2Num(GetField(12)));		WireID := GetField(14)	End;	ClrDialogEnd;